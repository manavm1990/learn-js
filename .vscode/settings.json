{
  "css.validate": false,
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingComments": "beforeWhitespace",
  "editor.bracketPairColorization.enabled": true,

  // Biome (formatter + linter)
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // Apply Biome's safe fixes + import sorting on save.
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit",

    // Keep TypeScript's missing-imports helper available.
    "source.addMissingImports": "explicit"
  },

  // Ensure the Biome formatter is used for the languages we care about.
  "[javascript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[javascriptreact]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescriptreact]": { "editor.defaultFormatter": "biomejs.biome" },
  "[json]": { "editor.defaultFormatter": "biomejs.biome" },
  "[jsonc]": { "editor.defaultFormatter": "biomejs.biome" },
  "[css]": { "editor.defaultFormatter": "biomejs.biome" },

  // Biome doesn't format MDX; don't auto-format lesson content on save.
  "[mdx]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },
  "[markdown]": { "editor.formatOnSave": false },

  // ESLint/Prettier are deprecated in this repo.
  "eslint.enable": false,

  "editor.linkedEditing": true,
  "editor.wordWrap": "wordWrapColumn",
  "files.autoSave": "onFocusChange",
  "html.autoClosingTags": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "@import": "./src/app/syntax-theme.json"
  },
  "cSpell.words": [
    "bject",
    "Blockquotes",
    "Cilufo",
    "ction",
    "Dhanav",
    "esult",
    "firstname",
    "ituation",
    "nterface"
  ]
}
